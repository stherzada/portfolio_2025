#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Verificando build antes do commit..."

# Salva o estado atual do diretÃ³rio de trabalho
git stash -q --keep-index

# Tenta fazer o build
npm run verify-build

# Guarda o status do build
BUILD_STATUS=$?

# Restaura o estado do diretÃ³rio de trabalho
git stash pop -q

# Se o build falhou, impede o commit
if [ $BUILD_STATUS -ne 0 ]; then
  echo "âŒ Build falhou! Corrija os erros antes de commitar."
  exit 1
fi

echo "âœ… Build passou! Prosseguindo com o commit..."
exit 0 